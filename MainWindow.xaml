<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Screenshot.MainWindow"
        Title="Screenify" Height="600" Width="960"
        Style="{StaticResource MaterialDesignWindow}"
        Background="#FF2F2F2F" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Circular toolbar button style -->
        <Style x:Key="ToolbarCircleButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <StackPanel HorizontalAlignment="Center">
                            <Border x:Name="Circle" Width="56" Height="56" CornerRadius="28" BorderThickness="2"
                                    BorderBrush="#FF444444" Background="#FF3A3A3A">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{TemplateBinding Content}" Foreground="#FFDDDDDD" Margin="0,6,0,0" HorizontalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Circle" Property="BorderBrush" Value="#FF888888"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Circle" Property="Opacity" Value="0.75"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Circle" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="#FF3A3A3A" BorderBrush="#FF202020" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Screenpresso free" Foreground="White" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,4,0" Width="839">
                    <Button Width="69" Height="24" Margin="0,4,4,4" Content="?" ToolTip="Help" Click="HelpMenu_Click" FontWeight="Normal" Style="{DynamicResource MaterialDesignFlatAccentBgButton}" Foreground="#DDFFFFFF" BorderBrush="#FF673AB7" Background="#FF673AB7" />
                    <Button Width="37" Height="24" Margin="0,4,4,4" Content="i" ToolTip="About" Click="AboutMenu_Click"/>
                    <Button Width="53" Height="26" Margin="0,4,4,4" Content="⚙" ToolTip="Settings" Click="SettingsMenu_Click"/>
                    <Button Width="50" Height="24" Margin="0,4,4,4" Content="✕" ToolTip="Close" Click="ExitMenu_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Center content: captured items -->
        <Border Grid.Row="1" Margin="0" Background="#FF555555" BorderBrush="#FF404040" BorderThickness="0,0,0,0">
            <ListBox x:Name="CapturedList" ItemsSource="{Binding Items}" Background="Transparent" BorderThickness="0" Foreground="#FFEEEEEE" SelectionMode="Single" av:ItemsSource="{av:SampleData ItemCount=5}" SelectionChanged="CapturedList_SelectionChanged">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Margin="12"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="160" Height="130" Margin="4" Background="#333" BorderBrush="#666" BorderThickness="1" CornerRadius="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="22"/>
                                </Grid.RowDefinitions>
                                <Image Source="{Binding Thumbnail}" Stretch="Fill" Grid.Row="0"/>
                                <TextBlock Text="{Binding FileName}" Grid.Row="1" FontSize="10" Foreground="#DDD" TextWrapping="NoWrap" Margin="4,2,4,2"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Bottom toolbar -->
        <Border Grid.Row="2" Background="#FF2B2B2B" BorderBrush="#FF202020" BorderThickness="1,1,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnScreenshotRegion" Grid.Column="0" Click="ScreenshotRegion_Click" Style="{StaticResource ToolbarCircleButtonStyle}" Content="Screenshot region"/>
                <Button x:Name="BtnRecordVideo" Grid.Column="1" Click="RecordVideo_Click" Style="{StaticResource ToolbarCircleButtonStyle}" Content="Record video"/>
                <Button x:Name="BtnEdit" Grid.Column="2" Click="EditItem_Click" Style="{StaticResource ToolbarCircleButtonStyle}" Content="Edit..."/>
                <Button x:Name="BtnPublish" Grid.Column="3" Click="Publish_Click" Style="{StaticResource ToolbarCircleButtonStyle}" Content="Publish"/>
                <Button x:Name="BtnClose" Grid.Column="4" Click="ExitMenu_Click" Style="{StaticResource ToolbarCircleButtonStyle}" Content="Close"/>
            </Grid>
        </Border>
    </Grid>
</Window>
